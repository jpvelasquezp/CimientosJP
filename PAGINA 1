            const header = document.getElementById('header');
            const backToTopBtn = document.getElementById('backToTopBtn');

            // --- Start of Gemini API Integration ---
            const projectIdeaInput = document.getElementById('projectIdeaInput');
            const generateProjectIdeaBtn = document.getElementById('generateProjectIdeaBtn');
            const projectIdeaResult = document.getElementById('projectIdeaResult');
            const projectIdeaLoading = document.getElementById('projectIdeaLoading');
            const projectIdeaError = document.getElementById('projectIdeaError');

            const messageTextarea = document.getElementById('message');
            const enhanceDescriptionBtn = document.getElementById('enhanceDescriptionBtn');
            const descriptionEnhancerLoading = document.getElementById('descriptionEnhancerLoading');
            const descriptionEnhancerStatus = document.getElementById('descriptionEnhancerStatus');
            
            const apiKey = ""; // API Key for Gemini (leave empty as per instructions)

            async function callGeminiAPI(prompt) {
                const apiUrl = `https://generativelanguage.googleapis.com/v1beta/models/gemini-2.0-flash:generateContent?key=${apiKey}`;
                
                let chatHistory = [{ role: "user", parts: [{ text: prompt }] }];
                const payload = { contents: chatHistory };

                try {
                    const response = await fetch(apiUrl, {
                        method: 'POST',
                        headers: { 'Content-Type': 'application/json' },
                        body: JSON.stringify(payload)
                    });

                    if (!response.ok) {
                        const errorData = await response.json();
                        console.error("Error de API:", response.status, errorData);
                        return { success: false, error: `Error ${response.status}: ${errorData?.error?.message || 'No se pudo conectar con el servicio de IA.'}` };
                    }

                    const result = await response.json();

                    if (result.candidates && result.candidates.length > 0 &&
                        result.candidates[0].content && result.candidates[0].content.parts &&
                        result.candidates[0].content.parts.length > 0) {
                        return { success: true, text: result.candidates[0].content.parts[0].text };
                    } else {
                        console.error("Respuesta inesperada de la API:", result);
                        return { success: false, error: "La IA no pudo generar una respuesta en este momento. Inténtalo de nuevo." };
                    }
                } catch (error) {
                    console.error("Error en la llamada a la API:", error);
                    return { success: false, error: "Error de conexión con el servicio de IA. Verifica tu conexión a internet." };
                }
            }

            if (generateProjectIdeaBtn) {
                generateProjectIdeaBtn.addEventListener('click', async () => {
                    const userInput = projectIdeaInput.value.trim();
                    if (!userInput) {
                        projectIdeaError.textContent = "Por favor, ingresa una descripción o tipo de proyecto.";
                        projectIdeaError.classList.remove('hidden');
                        projectIdeaResult.innerHTML = "";
                        return;
                    }

                    projectIdeaLoading.classList.remove('hidden');
                    generateProjectIdeaBtn.disabled = true;
                    projectIdeaResult.innerHTML = "";
                    projectIdeaError.classList.add('hidden');

                    const prompt = `Eres un consultor creativo de proyectos de construcción para "CimientosJP S.A.S.". Basado en la siguiente descripción o tipo de proyecto, genera 3 ideas innovadoras o consideraciones clave para un proyecto de construcción. Formatea tu respuesta como una lista clara y concisa, ideal para un cliente potencial. Descripción/Tipo de proyecto: "${userInput}"`;
                    
                    const response = await callGeminiAPI(prompt);

                    projectIdeaLoading.classList.add('hidden');
                    generateProjectIdeaBtn.disabled = false;

                    if (response.success) {
                        projectIdeaResult.innerHTML = `<h4 class="text-lg font-semibold mb-2 text-slate-700">Ideas Sugeridas:</h4><div class="gemini-output">${response.text.replace(/\n/g, '<br>')}</div>`;
                    } else {
                        projectIdeaError.textContent = response.error || "Ocurrió un error al generar ideas.";
                        projectIdeaError.classList.remove('hidden');
                    }
                });
            }

            if (enhanceDescriptionBtn) {
                enhanceDescriptionBtn.addEventListener('click', async () => {
                    const currentMessage = messageTextarea.value.trim();
                    if (!currentMessage) {
                        descriptionEnhancerStatus.textContent = "Escribe primero tu mensaje.";
                        descriptionEnhancerStatus.className = 'text-xs text-red-500 mt-1';
                        return;
                    }

                    descriptionEnhancerLoading.classList.remove('hidden');
                    enhanceDescriptionBtn.disabled = true;
                    descriptionEnhancerStatus.textContent = "Mejorando descripción...";
                    descriptionEnhancerStatus.className = 'text-xs text-blue-500 mt-1';
                    
                    const prompt = `Eres un asistente experto en redacción para la empresa constructora "CimientosJP S.A.S.". Mejora la siguiente descripción de un proyecto de construcción para que sea más clara, concisa, detallada y profesional. Enfócate en los aspectos que una constructora necesitaría saber para una cotización o consulta inicial. Mantén un tono amable y colaborativo. Aquí está la descripción original: "${currentMessage}"`;

                    const response = await callGeminiAPI(prompt);

                    descriptionEnhancerLoading.classList.add('hidden');
                    enhanceDescriptionBtn.disabled = false;

                    if (response.success) {
                        messageTextarea.value = response.text;
                        descriptionEnhancerStatus.textContent = "¡Descripción mejorada por IA!";
                        descriptionEnhancerStatus.className = 'text-xs text-green-600 mt-1';
                    } else {
                        descriptionEnhancerStatus.textContent = response.error || "Error al mejorar. Intenta de nuevo.";
                        descriptionEnhancerStatus.className = 'text-xs text-red-500 mt-1';
                    }
                });
            }
            // --- End of Gemini API Integration ---


            // Función para mostrar la sección activa y actualizar enlaces de navegación
            function setActiveSection(targetId) {
                // Si el targetId no existe, default a 'home' y no hacer nada más si es el caso.
                if (!document.getElementById(targetId)) {
                    if (targetId !== 'home') { // Evita bucle si 'home' no existe por alguna razón
                        console.warn(`Sección con ID "${targetId}" no encontrada. Redirigiendo a Inicio.`);
                        targetId = 'home'; 
                        if (!document.getElementById(targetId)) { // Si 'home' tampoco existe
                             console.error("La sección 'home' no existe. No se puede navegar.");
                             return; // Salir si 'home' no existe
                        }
                    } else if (!document.getElementById('home')) {
                        console.error("La sección 'home' no existe. No se puede navegar.");
                        return; // Salir si 'home' no existe
                    }
                }


                sections.forEach(section => {
                    if (section.id === targetId) {
                        section.classList.add('active');
                    } else {
                        section.classList.remove('active');
                    }
                });

                navLinks.forEach(link => {
                    if (link.getAttribute('href') === '#' + targetId) {
                        link.classList.add('active');
                    } else {
                        link.classList.remove('active');
                    }
                });
                // Cerrar menú móvil después de la navegación
                if (mobileMenu && !mobileMenu.classList.contains('hidden')) {
                    mobileMenu.classList.add('hidden');
                }
                window.scrollTo(0,0); 
            }

            pageLinkers.forEach(link => {
                link.addEventListener('click', function (e) {
                    e.preventDefault();
                    const targetId = this.getAttribute('href').substring(1);
                    setActiveSection(targetId);
                });
            });
            
            let initialSectionId = window.location.hash ? window.location.hash.substring(1) : 'home';
            if (!document.getElementById(initialSectionId) && document.getElementById('home')) { // Verifica si la sección inicial existe, sino default a home
                initialSectionId = 'home';
            } else if (!document.getElementById(initialSectionId) && !document.getElementById('home')) {
                 console.error("Ni la sección por hash ni 'home' existen. No se puede establecer sección inicial.");
            }
            if (document.getElementById(initialSectionId)) { // Solo activar si la sección (inicial o home) existe
                setActiveSection(initialSectionId);
            }


            if (mobileMenuButton) {
                mobileMenuButton.addEventListener('click', function () {
                    if (mobileMenu) mobileMenu.classList.toggle('hidden');
                });
            }
            
            const currentYearEl = document.getElementById('currentYear');
            if (currentYearEl) {
                currentYearEl.textContent = new Date().getFullYear();
            }


            window.addEventListener('scroll', function() {
                if (header) {
                    if (window.scrollY > 50) {
                        header.classList.add('h-16');
                        header.classList.remove('h-20');
                    } else {
                        header.classList.add('h-20');
                        header.classList.remove('h-16');
                    }
                }
                if (backToTopBtn) {
                    if (window.pageYOffset > 300) {
                        backToTopBtn.classList.remove('opacity-0');
                    } else {
                        backToTopBtn.classList.add('opacity-0');
                    }
                }
            });
            
            if (backToTopBtn) {
                backToTopBtn.addEventListener('click', function() {
                    window.scrollTo({ top: 0, behavior: 'smooth' });
                });
            }

            const filterButtons = document.querySelectorAll('.filter-btn');
            const projectItems = document.querySelectorAll('.project-item');

            filterButtons.forEach(button => {
                button.addEventListener('click', function() {
                    filterButtons.forEach(btn => btn.classList.remove('active', 'bg-amber-500', 'text-white'));
                    this.classList.add('active', 'bg-amber-500', 'text-white');
                    this.classList.remove('text-slate-700', 'hover:bg-amber-100');

                    const filter = this.getAttribute('data-filter');
                    projectItems.forEach(item => {
                        item.style.display = 'none'; 
                        if (filter === 'all' || item.classList.contains(filter)) {
                            item.classList.remove('hidden');
                            item.style.display = 'block'; 
                            item.style.animation = 'fadeInAnimation 0.5s ease-in-out';
                        }
                    });
                });
            });
            filterButtons.forEach(button => {
                if (!button.classList.contains('active')) {
                    button.classList.add('text-slate-700', 'bg-slate-200', 'hover:bg-amber-100', 'py-2', 'px-4', 'rounded-md', 'transition-colors', 'mr-2', 'mb-2');
                } else {
                     button.classList.add('bg-amber-500', 'text-white', 'py-2', 'px-4', 'rounded-md', 'transition-colors', 'mr-2', 'mb-2');
                }
            });

            const contactForm = document.getElementById('contactForm');
            const formMessage = document.getElementById('form-message');
            if(contactForm) {
                contactForm.addEventListener('submit', function(e) {
                    e.preventDefault();
                    if(formMessage) {
                        formMessage.textContent = 'Enviando mensaje...';
                        formMessage.className = 'mt-4 text-sm text-blue-600';
                    }

                    setTimeout(() => {
                        if(formMessage){
                            formMessage.textContent = '¡Mensaje enviado con éxito! Nos pondremos en contacto pronto.';
                            formMessage.className = 'mt-4 text-sm text-green-600';
                        }
                        contactForm.reset();
                        if(descriptionEnhancerStatus) descriptionEnhancerStatus.textContent = ''; // Limpiar estado de IA
                    }, 2000);
                });
            }
        });
    </script>
</body>
</html>
